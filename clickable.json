{
	"template": "cmake",
	"dependencies_target": [
		"intltool",
		"qtdeclarative5-u1db1.0",
		"qtdeclarative5-usermetrics0.1",
		"qtdeclarative5-ubuntu-content1",
		"qtdeclarative5-dev",
		"libpoppler-qt5-dev",
		"calibre",
		"python-apsw",
		"libmagickwand-6.q16-2",
		"liblqr-1-0"
	],
	"dependencies_host": [
		"gettext"
	],
	"install_bin": [
		"/bin/cp",
		"/bin/mkdir",
		"/bin/rm",
		"/usr/bin/basename",
		"$ROOT/calibre/setupcalibre",
		"$ROOT/calibre/pl",
		"/usr/bin/python2.7",
		"/usr/bin/pdftohtml"
	],
	"install_lib": [
		"/usr/lib/arm-linux-gnueabihf/libMagickWand-6.Q16.so.*",
		"/usr/lib/arm-linux-gnueabihf/libMagickCore-6.Q16.so.*",
		"/usr/lib/arm-linux-gnueabihf/liblqr-1.so.*"
	],
	"make_jobs": 4,
	"default": "build install launch logs",
	"postbuild": "cd $ROOT && ./installcalibre.sh"
}
