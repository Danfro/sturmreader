{
	"template": "cmake",
	"dependencies_target": [
		"intltool",
		"qtdeclarative5-u1db1.0",
		"qtdeclarative5-usermetrics0.1",
		"qtdeclarative5-ubuntu-content1",
		"libpoppler-qt5-dev",
		"calibre",
		"python-apsw"
	],
	"dependencies_build": [
		"gettext"
	],
	"install_lib": [
		"/usr/lib/python2.7/dist-packages/apsw.$ARCH_TRIPLET.so"
	],
	"install_bin": [
		"/bin/cp",
		"/bin/mkdir",
		"$ROOT/calibre/setupcalibre",
		"/usr/bin/python2.7"
	],
	"make_jobs": 4,
	"default": "build install launch logs --dirty",
	"postbuild": "cd $ROOT && ./installcalibre.sh"
}
